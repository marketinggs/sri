{
  "name": "email_service",
  "version": "1.0.0",
  "description": "GrowthSchool Email Microservice to send emails for different products",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "co:login": "aws codeartifact login --tool npm --repository gw --domain growthschool --domain-owner 314254797702 --region ap-south-1 && aws codeartifact login --tool npm --repository flick-models --domain growthschool --domain-owner 314254797702 --region ap-south-1",
    "install:flick-models": "npm install flick-models@latest --registry=https://growthschool-314254797702.d.codeartifact.ap-south-1.amazonaws.com/npm/flick-models/",
    "setup": "npm run co:login && npm install",
    "kill:port": "kill -9 $(lsof -t -i:8008) || true",
    "audit": "npm audit && npm audit fix",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "author": "Sri Krishna Jarugubilli",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
